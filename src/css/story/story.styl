/* CUSTOM STORY STYLE */
body
    //overflow hidden

#touch
    display flex
    flex-direction row
    width 100%
    height 25vh
    top 75vh
    align-items flex-end
    justify-content center
    position absolute
    z-index set-index('overlay')
    padding-bottom 5rem

    #left
        margin-right 2rem

    #right
        margin-left 2rem   

        &.solo
            margin-left 0 

            button
                width 15rem
                border-radius 4.5rem

                p
                    margin 0  
                    display block

                svg
                    display none 

    #left, #right
        display none

        &.is-visible
            visibility visible
            opacity 1 
            display block 

        button
            width 4.5rem
            height 4.5rem
            border 2px solid $white 
            border-radius 50%
            text-align center  
            text-transform uppercase
            padding 1rem  
            font-family $national
            font-weight 700
            set-type-size('root', true)
            background rgba($white, 0.3) 
            
            p
                margin 0 
                display none

            &:hover
                background rgba($white, 1)  

            svg
                width 2rem
                height 2rem

.quiz-details
    z-index set-index('overlay')
    display flex
    position absolute
    flex-direction row 
    width 100%
    justify-content flex-end
    opacity 0
    padding 2rem
    pointer-events none

    &.is-visible
       visibility visible
       opacity 1 
       pointer-events all 

    .song-count
        set-type-size('small', true)
        font-family $national
        margin 0
        padding 0
        text-align right

    .song-circles
        display flex
        flex-direction row

        .song-circle
            width 25px
            height 25px
            border-radius 50%
            border 2px solid rgba($white, 0.5)
            margin-left 0.5rem

            &.is-correct
                border 2px solid rgba($kb-teal, 1) 
                background-color $kb-teal 
                background-image url('assets/images/check.png')
                background-repeat no-repeat
                background-size 20px 20px
                background-position center

            &.is-wrong
                border 2px solid rgba($off-black, 1) 
                background-color $off-black
                background-image url('assets/images/x.png')
                background-repeat no-repeat
                background-size 20px 20px
                background-position center            

.slide
    width 100%
    height 100vh
    display flex
    flex-direction column
    padding 2rem
    position absolute
    opacity 0
    pointer-events none

    &.is-visible-slide
        visibility visible
        opacity 1
        pointer-events all


    &.gradient
        background linear-gradient(-45deg, $kb-teal 0%, $kb-purple 50%, $kb-pink 100%)

    .header
        width 100%
        display flex
        flex-direction row
        align-items flex-start

        .roundel
            width 50px
            height 50px
            background $off-black
            display flex
            align-items center
            justify-content center
            border-radius 50%
            box-shadow 4px 4px 10px rgba($off-black, 0.1)

            svg
                width 45%

                #leftP
                    fill $gray-light  

                #rightP
                    fill $white  

    .title
        width 100%
        height 100vh
        display flex
        align-items center
        justify-content center
        flex-direction column 

        h1
            set-type-size('xx-large', true)
            font-family $national
            font-weight 700
            margin 0

        .kb-logo
            width 100%
            display flex
            align-items center
            justify-content center

            svg
                width 100%

    .byline
        width 100%
        height 100vh
        display flex
        align-items flex-end
        flex-direction row

        div
            width 50%

            p
                margin 0   
                set-type-size('root', true)
                font-family $national

                &.bolded
                    font-weight 700

    .text-wrapper
        width 100%
        height 100vh
        display flex
        justify-content center
        flex-direction column

        p    
            set-type-size('large', true)
            font-family $national

    .button-wrapper   
        width 100%
        display flex
        align-items flex-end
        justify-content center   

        button  
            width 12.5rem
            height 3.75rem
            border 2px solid $white 
            text-align center  
            text-transform uppercase
            padding 1rem  
            font-family $national
            font-weight 700
            set-type-size('root', true)
            background rgba($white, 0.3)  

            &:hover
                background rgba($white, 1) 

    .quiz-header
        display flex
        flex-direction row     
        justify-content space-between 

        .song-details
            display flex
            flex-direction column  
            font-family $national
            set-type-size('large', true)  

            p
                margin 0
                padding 0

            #artist
                text-transform uppercase
                font-weight 700               

    .lyric-wrapper
        width 100%
        height 100vh
        display flex
        justify-content center
        flex-direction column

        p    
            set-type-size('xxxx-large', true)
            font-family $national
            font-weight 700 
            span 
                background-color none 
                &.censored 
                    background-color $off-black

    .compare-wrapper
        width 100%
        height 100vh
        display flex
        justify-content center
        flex-direction column

        .lyric-set
            background $white
            border 2px solid $off-black
            padding 2rem
            margin-top 3rem

            .lyric-head
                width 100%
                display flex
                flex-direction row
                justify-content space-between
                padding-bottom 1.5rem
                border-bottom 2px solid $off-black
                border-style dashed

                p
                    set-type-size('medium', true)
                    font-family $national
                    font-weight 700
                    margin 0
                    padding-top 0

                svg
                    stroke $gray    

            p
                set-type-size('xx-large', true)
                font-family $national
                margin 0 
                padding-top 1.5rem 

            .origLyric
                span
                    background $off-black
                    font-weight 700     

            .kbLyric
                span
                    font-weight 700         

    .tap-directions
        width 100%
        display flex
        align-items center
        justify-content flex-end
        flex-direction column   

        .roundel
            width 50px
            height 50px
            border-radius 50%
            background rgba($white, 0.9)

        p
            set-type-size('small', true)
            font-family $national
            text-align center                    