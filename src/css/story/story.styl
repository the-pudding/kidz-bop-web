            &.solo
                margin-left 0 

                button
                    width 15rem
                    border-radius 4rem

                    p
                        margin 0  
                        display block

                    svg
                        display none 

            &.pulse
                button
                    animation pulse 1.5s ease infinite           

        #left, #right
            display none

            &.is-visible
