@keyframes popIn {
  0% {
    transform: scale(0);
  }
  80% {
    transform: scale(1.75);
  }
  100% {
    transform: scale(1);
  }
}


@keyframes dash {
  0% {
      stroke-dashoffset: 100%;
      opacity: 0
  }
  50% {
    stroke-dashoffset: 100%;
    opacity: 1
  }
  100% {
    stroke-dashoffset: 0;
    opacity: 1
  }
}


@keyframes fadeInUp {
  from {
    transform: translate3d(0, 40px, 0)
    opacity: 0
    display: none
  }
  to {
    transform: translate3d(0, 0, 0)
    opacity: 1
    display: flex
  }
}


@keyframes pulse {
  0% {
    background rgba($white, 0.3)
  }
  50% {
    background rgba($white, 1)
  }
  100% {
    background rgba($white, 0.3)
  }
}

@keyframes fadeBG {
  0% {
    background-color: rgba($white, 0.2)
  }
  50% {
    background-color: rgba($white, 0.5)
  }
  100% {
    background-color: rgba($white, 0.2)
  }
}  

@keyframes ampUp {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(2);
  }
  100% {
    transform: scale(1);
  }
}

