/* CUSTOM STORY STYLE */
#content
    background $kb-teal
    width 100%
    height 100vh

#touch
    display flex
    flex-direction column
    width 100%
    height 25vh
    top 75vh
    align-items center
    justify-content flex-end
    position absolute
    z-index set-index('overlay')
    padding-bottom 2rem
    +mq('bp-4')
        top 65vh

    .tapper
        display flex
        flex-direction row
        justify-content center

        #left
            margin-right 2rem

        #right
            margin-left 2rem   

            &.solo
                margin-left 0 

                button
                    width 15rem
                    border-radius 4.5rem

                    p
                        margin 0  
                        display block

                    svg
                        display none 

        #left, #right
            display none

            &.is-visible
                visibility visible
                opacity 1 
                display block 

            button
                width 4.5rem
                height 4.5rem
                border 2px solid $white 
                border-radius 50%
                text-align center  
                text-transform uppercase
                padding 1rem  
                font-family $national
                font-weight 700
                set-type-size('root', true)
                background rgba($white, 0.3) 
                box-shadow 4px 4px 10px rgba($off-black, 0.1)
                transition 0.25s ease-in-out
                
                p
                    margin 0 
                    display none

                &:hover
                    background rgba($white, 1) 
                    transform translate(0, -10px)


                svg
                    width 2rem
                    height 2rem

    #skipper
        visibility hidden
        opacity 0

        &.is-visible
            visibility visible
            opacity 1

        p
            font-family $national 
            set-type-size('small', true)
            margin 1rem 0 0 0
            padding 0 

            &:hover
                font-weight 700
                text-decoration underline  

#categories
    width 100%
    position absolute
    height 80vh
    display none
    flex-direction column
    justify-content flex-end
    visibility hidden
    opacity 0
    z-index set-index('overlay')
    align-content stretch
    bottom 0
    +mq('bp-4')
        max-width 40em
        left 50%
        transform translateX(-50%)
        bottom 5rem

    &.is-visible
        visibility visible
        opacity 1
        display flex

    .category-bar    
        width 100%
        padding 1rem
        display flex
        flex-direction row 
        align-items center
        justify-content space-between 
        flex-grow 1
        p 
            margin 0

        &:hover

            .button-wrapper
        
                button
                    transform translate(-1rem)  
                    transition 0.25s ease-in-out;

        .button-wrapper
            display flex
            flex-direction row
            align-items center

            p
                color $off-black
                font-family $national
                font-weight 500
                set-type-size('small', true) 
                margin 0   
                padding-right 1rem  
                display none
                visibility visible
                opacity 1  

                &.is-visible
                    display flex
                    visibility visible
                    opacity 1                        

        p
            color $off-black
            font-family $national
            font-weight 700
            set-type-size('xx-large', true)

        button
            width 50px
            height 50px
            border-radius 50%
            background rgba($white, 1)

        &.alcohol-bar 
            background $off-black 

            p
                color $white

        &.sexual-bar 
            background $kb-pink

        &.profanity-bar 
            background $kb-purple   

        &.violence-bar 
            background $kb-teal

        &.identity-bar 
            background $kb-blue

        &.other-bar 
            background $gray-light 

.quiz-details
    z-index set-index('overlay')
    display flex
    position absolute
    flex-direction row 
    width 100%
    justify-content flex-end
    opacity 0
    padding 2rem
    pointer-events none
    +mq('bp-4')
        max-width 40em
        left 50%
        margin-top 2rem
        transform translateX(-50%)

    &.is-visible
       visibility visible
       opacity 1 
       pointer-events all 

    &.total
        justify-content center

        .song-count
            display none   

    .song-count
        set-type-size('small', true)
        font-family $national
        margin 0
        padding 0
        text-align right

    .song-circles
        display flex
        flex-direction row

        .song-circle
            width 25px
            height 25px
            border-radius 50%
            border 2px solid rgba($white, 0.5)
            margin-left 0.5rem

            &.is-correct
                border 2px solid rgba($kb-teal, 1) 
                background-color $kb-teal 
                background-image url('assets/images/check.png')
                background-repeat no-repeat
                background-size 20px 20px
                background-position center

            &.is-wrong
                border 2px solid rgba($off-black, 1) 
                background-color $off-black
                background-image url('assets/images/x.png')
                background-repeat no-repeat
                background-size 20px 20px
                background-position center                         

.slide
    width 100%
    height 100vh
    display flex
    flex-direction column
    padding 2rem
    position absolute
    opacity 0
    background $white
    pointer-events none
    +mq('bp-4')
        max-width 40em
        left 50%
        transform translateX(-50%)
        margin 2rem 0
        height 90vh
        box-shadow 4px 4px 10px rgba($off-black, 0.1)

    &.is-visible-slide
        visibility visible
        opacity 1
        pointer-events all


    &.gradient
        background linear-gradient(-45deg, $kb-teal 0%, $kb-purple 50%, $kb-pink 100%)

    .header
        width 100%
        display flex
        flex-direction row
        align-items flex-start

        .roundel
            width 50px
            height 50px
            background $off-black
            display flex
            align-items center
            justify-content center
            border-radius 50%
            box-shadow 4px 4px 10px rgba($off-black, 0.1)

            svg
                width 45%

                #leftP
                    fill $gray-light  

                #rightP
                    fill $white  

    .title
        width 100%
        height 100vh
        display flex
        align-items center
        justify-content center
        flex-direction column 

        h1
            set-type-size('xx-large', true)
            font-family $national
            font-weight 700
            margin 0

        .kb-logo
            width 100%
            display flex
            align-items center
            justify-content center

            svg
                width 100%

    .byline
        width 100%
        height 100vh
        display flex
        //align-items flex-end
        flex-direction row
        margin-top 3rem

        div
            width 50%

            p
                margin 0   
                set-type-size('root', true)
                font-family $national

                &.bolded
                    font-weight 700

    .text-wrapper
        width 100%
        height 70vh
        display flex
        justify-content center
        flex-direction column

        &.top
            justify-content flex-start
            height 20vh

        p    
            set-type-size('large', true)
            font-family $national
            margin 0 0 1rem 0

        .alcohol-span
            font-weight 700
            color $off-black   

        .sexual-span
            font-weight 700
            color $kb-pink

        .profanity-span
            font-weight 700
            color $kb-purple

        .violence-span
            font-weight 700
            color $kb-teal

        .identity-span
            font-weight 700
            color $kb-blue

        .other-span
            font-weight 700
            color $gray                        

    .button-wrapper   
        width 100%
        display flex
        align-items flex-end
        justify-content center   

        button  
            width 12.5rem
            height 3.75rem
            border 2px solid $white 
            text-align center  
            text-transform uppercase
            padding 1rem  
            font-family $national
            font-weight 700
            set-type-size('root', true)
            background rgba($white, 0.3)  

            &:hover
                background rgba($white, 1) 

    .quiz-header
        display flex
        flex-direction row     
        justify-content space-between 

        .song-details
            display flex
            flex-direction column  
            font-family $national
            set-type-size('large', true)  

            p
                margin 0
                padding 0

            #artist
                text-transform uppercase
                font-weight 700               

    .lyric-wrapper
        width 100%
        height 70vh
        display flex
        justify-content center
        flex-direction column

        p    
            set-type-size('xxxx-large', true)
            font-family $national
            font-weight 700 
            span 
                background-color none 
                &.censored 
                    background-color $off-black

    .compare-wrapper
        width 100%
        height 70vh
        display flex
        justify-content center
        flex-direction column
        margin-top 2rem

        .lyric-set
            background $white
            border 2px solid $off-black
            padding 2rem
            margin-bottom 2rem

            .lyric-head
                width 100%
                display flex
                flex-direction row
                justify-content space-between
                padding-bottom 1.5rem
                border-bottom 2px solid $off-black
                border-style dashed

                p
                    set-type-size('medium', true)
                    font-family $national
                    font-weight 700
                    margin 0
                    padding-top 0

                svg
                    stroke $gray    

            p
                set-type-size('xx-large', true)
                font-family $national
                margin 0 
                padding-top 1.5rem 

            .origLyric
                span
                    background $off-black
                    font-weight 700     

            .kbLyric
                span
                    font-weight 700         

    .tap-directions
        width 100%
        display flex
        align-items center
        justify-content flex-end
        flex-direction column   

        .roundel
            width 50px
            height 50px
            border-radius 50%
            background rgba($white, 0.9)

        p
            set-type-size('small', true)
            font-family $national
            text-align center 

    .results-wrapper
        width 100%
        display flex
        flex-direction column
        align-items center 
        padding-top 3rem   

        .results-count
            font-family $national
            font-weight 700
            set-type-size('xxxx-large', true) 
            margin 0 

        .results-sentence
            font-family $national
            set-type-size('large', true)  
            magrin 1rem 0 0 0   

#slide_18
    padding-bottom 0
    overflow scroll

    .chart
        height 200px
        width 100%

    .dropdown
        width 100%

        .dropdown-group
            position relative
            width 100%
            margin 0 auto
            height 6rem
            display flex
            justify-content center
            cursor pointer 

            select
                width 100%
                border 0
                background-color transparent
                set-type-size('x-large', true)
                font-family $national
                font-weight 700
                color $off-black
                border-radius none
                height 5rem
                position absolute
                cursor pointer
                appearance none
                text-indent 2rem
                background-image url('assets/images/arrow.png')
                background-repeat no-repeat
                background-position 95% 50%
                background-size 30px 30px  

            .select-bg
                position absolute
                border 2px solid $white
                background-color rgba($white, 0.3)
                width 100%
                height 5rem    
                box-shadow 4px 4px 10px rgba($off-black, 0.1)    

    .compare-wrapper
        justify-content flex-start

        .lyric-head

            .deets

                p
                    line-height 1.25
                    font-weight 500     

                .song
                    font-weight 700 

        .toggle
            display flex
            flex-direction row 

            p
                font-weight 500
                set-type-size('small', true)
                color $gray

            .toggle-on
                font-weight 700  
                color $off-black  

            .switch
                margin 0 0.25rem
                position relative
                width 3rem
                height 1.5 rem    

                input
                    opacity 0
                    width 0
                    height 0

                .slider
                    position absolute
                    cursor pointer
                    top 0
                    left 0
                    right 0
                    bottom 0
                    background-color $off-black
                    transition 0.4s
                    border-radius 1.5rem

                    &::before
                        position absolute
                        content ''
                        height 1rem
                        width 1rem
                        left 0.25rem
                        bottom 0.25rem
                        background-color $white
                        transition 0.4s
                        border-radius 50%

                input:checked + .slider
                    background-color $gray-dark

                input:focus + .slider
                    none

                input:checked + .slider:before
                    transform translateX(1.5rem)        
                                