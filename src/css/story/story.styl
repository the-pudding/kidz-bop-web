    .tapper
        display flex
        flex-direction row
        justify-content center
        z-index 999

        #left
            margin-right 2rem

            &.solo
                margin-right 0 

                button
                    width 15rem
                    border-radius 4rem

                    p
                        margin 0  
                        display block

                    svg
                        display none 

        #right
