<section id='method'>
	<button>
		<img inline src='x.svg'>
	</button>
	<div class='text-wrapper'>
			<h5>Methodology</h5>
			{{#each copy.method}}
				<p>{{{value}}}</p>
			{{/each}}
		</div>
</section>
<section id='categories'>
	{{#each copy.censorship_categories}}
	<div class='category-bar {{{tag}}}-bar' data-cat={{tag}}>
		<p>{{{text}}}</p>
		<div class='button-wrapper' data-direction='forward'>
			<button>
				<img inline src='arrow-right.svg'>
			</button>
		</div>
	</div>
	{{/each}}
	<div class='category-bar back-bar' data-cat=back>
		<div class='button-wrapper' data-direction='back'>
			<button>
				<img inline src='arrow-left.svg'>
			</button>
		</div>
		<p>back</p>
	</div>
</section>
<section id='touch'>
	<div class='tapper'>
		<div id='left'>
			<button>
				<p>Back to categories</p>
				<img inline src='arrow-left.svg'>
			</button>
		</div>
		<div id='right' class='is-visible solo pulse'>
			<button>
				<p>Let's find out</p>
				<img inline src='arrow-right.svg'>
			</button>
		</div>
	</div>
	<div class='directions'>
		<p id='skipper'>Skip the quiz. Show me the data.</p>
		<p id='begin'>Take me back to the beginnning.</p>
	</div>
	<div class='bottom-fade'></div>
</section>
<section id='story'>
	<div class='quiz-details'>
		<div class='quiz-tracker'>
			<p class='song-count'>Song <span id='count'>1</span> of 5</p>
			<div class='song-circles'>
				<div id='song1' class='song-circle' data-quiz="1"></div>
				<div id='song2' class='song-circle' data-quiz="2"></div>
				<div id='song3' class='song-circle' data-quiz="3"></div>
				<div id='song4' class='song-circle' data-quiz="4"></div>
				<div id='song5' class='song-circle' data-quiz="5"></div>
			</div>
		</div>
	</div>

	<div id='slide_1' class='slide gradient is-visible-slide'>
		<div class='title'>
			<h1>{{meta.title1}}</h1>
			<div class='kb-logo'>
				<img inline src='kb_title.svg'>
			</div>
			<h1>{{meta.title2}}</h1>
		</div>
		<div class='byline'>
			<div>
				<p class='bolded'>Data analysis by</p>
				<a href='{{meta.author1.url}}' target='_blank'><p>{{meta.author1.name}}</p></a>
			</div>
			<div>
				<p class='bolded'>Design + dev by</p>
				<a href='{{meta.author2.url}}' target='_blank'><p>{{meta.author2.name}}</p></a>
				<a href='{{meta.author3.url}}' target='_blank'><p>{{meta.author3.name}}</p></a>
			</div>
		</div>
	</div>

	<div id='slide_2' class='slide gradient'>
		<div class='text-wrapper'>
			{{#each copy.slide_2}}
			<p>{{{value}}}</p>
			{{/each}}
		</div>
	</div>

	{{#each copy.quiz_questions}}
	<div id='slide_{{firstID}}' class='slide gradient quiz' data-quiz='{{quizID}}'>
		<div class='quiz-header'>
			<div class='song-details'>
				<p id='artist'>{{{artist}}}</p>
				<p id='song'>{{{song}}}</p>
			</div>
		</div>
		<div class='lyric-wrapper'>
			<p>{{{lyric}}}</p>
		</div>
	</div>
	<div id='slide_{{secondID}}' class='slide gradient quiz' data-answer='{{quizID}}'>
		<div class='quiz-header'>
			<div class='song-details'>
				<p id='artist'>{{{artist}}}</p>
				<p id='song'>{{{song}}}</p>
			</div>
		</div>
		<div class='compare-wrapper'>
			<div class='quiz-feedback'>
				<p><span>Feedback!</span> Sentence about how you did goes here.</p>
			</div>
			<div class='lyric-block'>
				<div class='lyric-set'>
					<div class='lyric-head'>
						<p>Original</p>
						<a href='{{{ogLink}}}' target='_blank'><img inline src='youtube.svg'></a>
					</div>
					<p class='origLyric'>{{{lyric}}}</p>
				</div>
				<div class='lyric-set'>
					<div class='lyric-head'>
						<p>Kidz Bop</p>
						<a href='{{{kbLink}}}' target='_blank'><img inline src='youtube.svg'></a>
					</div>
					<p class='kbLyric'>{{{kbLyric}}}</p>
				</div>
			</div>
		</div>
	</div>
	{{/each}}

	<div id='slide_13' class='slide gradient'>
		<div class='results-wrapper'>
			<p class='results-count'><span class='correct-count'>X</span> out of 5</p>
			<p class='results-sentence'>Kids, earmuffs! Did you even really try?</p>
		</div>
		<div class='text-wrapper'>
			{{#each copy.slide_13}}
			<p>{{{value}}}</p>
			{{/each}}
		</div>
	</div>
	<div id='slide_14' class='slide' data-chart='bar'>
		<div class='text-wrapper top'>
			{{#each copy.slide_14}}
			<p>{{{value}}}</p>
			{{/each}}
		</div>
		<div class='chart chart__bar'></div>
		<div class='chart-labels'>
			<div class='left-label'>
				<img inline src='arrow-left.svg'>
				<p>Less censorship</p>
			</div>
			<div class='right-label'>
				<p>More censorship</p>
				<img inline src='arrow-right.svg'>
			</div>
		</div>
	</div>
	<div id='slide_15' class='slide' data-chart='bar'>
		<div class='text-wrapper top'>
			{{#each copy.slide_15}}
			<p>{{{value}}}</p>
			{{/each}}
		</div>
		<div class='chart chart__bar'></div>
		<div class='chart-labels'>
			<div class='left-label'>
				<img inline src='arrow-left.svg'>
				<p>Less censorship</p>
			</div>
			<div class='right-label'>
				<p>More censorship</p>
				<img inline src='arrow-right.svg'>
			</div>
		</div>
	</div>
	<div id='slide_16' class='slide'>
		<div class='text-wrapper'>
			{{#each copy.slide_16}}
			<p>{{{value}}}</p>
			{{/each}}
		</div>
	</div>
	<div id='slide_17' class='slide'>
		<div class='text-wrapper top'>
			{{#each copy.slide_17}}
			<p>{{{value}}}</p>
			{{/each}}
		</div>
	</div>
	<div id='slide_18' class='slide gradient'>
		<div class='bottom-fade'></div>
		<div class='before-text dropdown-text'>
			<p>Words classified as <span id='category-sent'></span> appear in <span id='catIN'>X</span> original songs and are censored in <span id='catCEN'>X</span> Kidz Bop versions (<span id='catPCT'>X</span>%). Within this category, the word </p>
		</div>
		<div class='dropdown'>
			<div class='dropdown-group'>
				<div class='select-bg'></div>
				<select class='first-select'>
				</select>
			</div>
		</div>
		<div class='after-text dropdown-text'>
			<p>appears in <span id='wordIN'>X</span> orignal songs and was censored in <span id='wordCEN'>X</span> Kidz Bop versions (<span id='wordPCT'>X</span>%), including...</p>
		</div>
		<div class='compare-wrapper'>
			<div class='lyric-set'>
				<div class='lyric-head'>
					<div class='deets'>
						<p class='song'>Livinâ€™ La Vida Loca</p>
						<p class='kb-deets'>Kidz Bop, 2001</p>
						<p class='orig-deets'>Original by Ricky Martin</p>
					</div>
					<div class='toggle'>
						<p class='toggle-labels toggle-kb toggle-on'>Kidz Bop</p>
						<label class="switch">
							<input type="checkbox" class="is-faces" checked='true'>
							<span class="slider round"></span>
						</label>
						<p class='toggle-labels toggle-og'>Original</p>
					</div>
				</div>
				<p class='origLyric'>She never drinks the water makes you order French champagne</p>
			</div>
		</div>
	</div>
</section>